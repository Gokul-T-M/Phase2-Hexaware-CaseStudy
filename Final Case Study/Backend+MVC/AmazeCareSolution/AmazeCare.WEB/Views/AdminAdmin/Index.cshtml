@model IEnumerable<AmazeCare.WEB.Models.AdminAdmin.AdminResponseViewModel>
@{
    ViewBag.Title = "Admins";
}

<h2>Admins</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Admin</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@admin.AdminId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@admin.AdminId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@admin.AdminId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="window.location.href='/Admin/Dashboard'" class="btn btn-primary">
    Return to Home
</button>
