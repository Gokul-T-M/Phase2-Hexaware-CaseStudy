@model AmazeCare.WEB.Models.AdminDoctor.DoctorResponseViewModel
@{
    ViewBag.Title = "Delete Doctor";
}
<h2>Delete Doctor</h2>
<p>Are you sure you want to delete this doctor?</p>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Specialty</dt>
    <dd class="col-sm-10">@Model.Specialty</dd>
    <dt class="col-sm-2">Experience</dt>
    <dd class="col-sm-10">@Model.Experience</dd>
    <dt class="col-sm-2">Qualification</dt>
    <dd class="col-sm-10">@Model.Qualification</dd>
    <dt class="col-sm-2">Designation</dt>
    <dd class="col-sm-10">@Model.Designation</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DoctorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
