@model IEnumerable<AmazeCare.WEB.Models.AdminDoctor.DoctorResponseViewModel>
@{
    ViewBag.Title = "Doctors";
}

<h2>Doctors</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Doctor</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Specialty</th>
            <th>Experience</th>
            <th>Qualification</th>
            <th>Designation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Email</td>
                <td>@doctor.Specialty</td>
                <td>@doctor.Experience</td>
                <td>@doctor.Qualification</td>
                <td>@doctor.Designation</td>
                <td>
                    <a asp-action="Details" asp-route-id="@doctor.DoctorId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@doctor.DoctorId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="window.location.href='/Admin/Dashboard'" class="btn btn-primary">
    Return to Home
</button>
