@model IEnumerable<AmazeCare.WEB.Models.AdminPatient.PatientResponseViewModel>

@{
    ViewBag.Title = "Patient Management";
}

<h2>Patient Management</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Patient</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Medical Records</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Email</td>
                <td>@patient.ContactNumber</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Gender</td>
                <td>@patient.PreviousMedicalRecords</td>
                <td>
                    <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="window.location.href='/Admin/Dashboard'" class="btn btn-primary">
    Return to Home
</button>
