@model IEnumerable<AmazeCare.WEB.Models.AdminAppointment.AppointmentResponseViewModel>

@{
    ViewBag.Title = $"Appointments for Patient ID {ViewBag.PatientId}";
}

<h2>Appointments for Patient ID @ViewBag.PatientId</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th>Symptoms</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.AppointmentDate.ToString("g")</td>
                <td>@appt.DoctorName</td>
                <td>@appt.Symptoms</td>
                <td>@appt.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appt.AppointmentId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ByPatient" class="btn btn-secondary">Back</a>

