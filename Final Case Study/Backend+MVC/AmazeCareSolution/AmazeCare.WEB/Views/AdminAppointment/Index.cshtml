@model IEnumerable<AmazeCare.WEB.Models.AdminAppointment.AppointmentResponseViewModel>

@{
    ViewBag.Title = "Appointment Management";
}

<h2>Appointment Management</h2>


<div class="mb-3">
    <a asp-action="ByDoctor" class="btn btn-outline-primary me-2">Get Appointments by Doctor ID</a>
    <a asp-action="ByPatient" class="btn btn-outline-secondary">Get Appointments by Patient ID</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Symptoms</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.AppointmentDate.ToString("g")</td>
                <td>@appt.PatientName</td>
                <td>@appt.DoctorName</td>
                <td>@appt.Symptoms</td>
                <td>@appt.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appt.AppointmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@appt.AppointmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="window.location.href='/Admin/Dashboard'" class="btn btn-primary">
    Return to Home
</button>
