@model AmazeCare.WEB.Models.AdminAppointment.AppointmentResponseViewModel

@{
    ViewBag.Title = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this appointment?</strong>
</div>

<table class="table table-bordered">
    <tr>
        <th>Date</th>
        <td>@Model.AppointmentDate.ToString("f")</td>
    </tr>
    <tr>
        <th>Patient</th>
        <td>@Model.PatientName</td>
    </tr>
    <tr>
        <th>Doctor</th>
        <td>@Model.DoctorName</td>
    </tr>
    <tr>
        <th>Symptoms</th>
        <td>@Model.Symptoms</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

