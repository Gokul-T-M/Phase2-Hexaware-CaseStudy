@model ContactsDirectoryApp.Models.ContactInfo

<h2>Add New Contact</h2>

<form asp-action="AddContact" method="post">
    <div>
        <label>ContactId</label>
        <input asp-for="ContactId" />
    </div>
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" />
    </div>
    <div>
        <label>Last Name</label>
        <input asp-for="LastName" />
    </div>
    <div>
        <label>Company</label>
        <input asp-for="CompanyName" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="EmailId" />
    </div>
    <div>
        <label>Mobile</label>
        <input asp-for="MobileNo" />
    </div>
    <div>
        <label>Designation</label>
        <input asp-for="Designation" />
    </div>
    <button type="submit">Save</button>
</form>